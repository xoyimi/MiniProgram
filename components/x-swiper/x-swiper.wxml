<!--components/x-swiper.wxml-->
<swiper class="swiper" autoplay circular indicator-dots interval="3000" duration="300" indicator-active-color="#ff5777">
  <block wx:for="{{list}}" wx:key="{{index}}">
    <swiper-item>
      <image src="{{item.image}}" mode="widthFix"></image>
    </swiper-item>
  </block>
</swiper>